{
  "name": "deca",
  "private": true,
  "packageManager": "bun@1.1.34",
  "scripts": {
    "dev": "bun --filter ./apps/api dev & bun --filter ./apps/console dev",
    "dev:api": "bun --filter ./apps/api dev",
    "dev:console": "bun --filter ./apps/console dev",
    "build": "bun --filter ./apps/console build",
    "test": "bun --filter ./apps/api test && bun --filter ./apps/console test",
    "lint": "bun --filter ./apps/api lint && bun --filter ./apps/console lint",
    "format": "biome format ."
  },
  "workspaces": ["apps/*", "packages/*"],
  "devDependencies": {
    "@biomejs/biome": "1.8.3"
  }
}
